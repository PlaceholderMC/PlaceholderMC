{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "include": [],
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "install",
        "Launcher_QT_VERSION_MAJOR": "6",
        "Launcher_BUILD_PLATFORM": "custom"
      }
    },
    {
      "name": "base_debug",
      "hidden": true,
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "base_release",
      "hidden": true,
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LTO": "ON"
      }
    },
    {
      "name": "windows_base_msvc",
      "hidden": true,
      "inherits": [
        "base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL",
        "Launcher_BUILD_ARTIFACT": "Windows-Qt6"
      }
    },
    {
      "name": "macos_base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "dist",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "yes",
        "Launcher_BUILD_ARTIFACT": "macOs-Qt6"
      }
    },
    {
      "name": "linux_base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "yes",
        "Launcher_BUILD_ARTIFACT": "macOs-Qt6"
      }
    },
    {
      "name": "windows_debug",
      "displayName": "MSVC Debug",
      "description": "MSVC build using Visual Studio generator",
      "inherits": [
        "base_debug",
        "windows_base_msvc"
      ],
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "windows_debug_ninja",
      "displayName": "MSVC Debug Ninja",
      "description": "MSVC debug build using Ninja generator",
      "inherits": [
        "base_debug",
        "windows_base_msvc"
      ],
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "yes"
      }
    },
    {
      "name": "windows_release",
      "displayName": "MSVC Release",
      "description": "MSVC release build Visual Studio generator",
      "inherits": [
        "base_release",
        "windows_base_msvc"
      ],
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL",
        "FORCE_BUNDLED_LIBS": "ON"
      },
      "environment": {
        "CXX_FLAGS": ""
      },
      "vendor": {}
    },
    {
      "name": "macos_debug",
      "displayName": "MacOS Debug",
      "description": "MacOS debug build using Ninja generator",
      "inherits": [
        "base_debug",
        "macos_base"
      ]
    },
    {
      "name": "macos_release",
      "displayName": "MacOS Release",
      "description": "MacOS release build using Ninja generator",
      "inherits": [
        "base_release",
        "macos_base"
      ],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64"
      }
    },
    {
      "name": "linux_debug",
      "displayName": "Linux Debug",
      "description": "Linux debug build using Ninja generator",
      "inherits": [
        "base_debug",
        "linux_base"
      ]
    },
    {
      "name": "linux_release",
      "displayName": "Linux Release",
      "description": "Linux release build using Ninja generator",
      "inherits": [
        "base_release",
        "linux_base"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "windows_base_msvc",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos_base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux_base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows_debug",
      "inherits": [
        "windows_base_msvc"
      ],
      "displayName": "MSVC Debug",
      "description": "MSVC debug build using Visual Studio generator",
      "configurePreset": "windows_debug",
      "nativeToolOptions": [
        "/p:UseMultiToolTask=true",
        "/p:EnforceProcessCountAcrossBuilds=true"
      ]
    },
    {
      "name": "windows_debug_ninja",
      "inherits": [
        "windows_base_msvc"
      ],
      "displayName": "MSVC Debug Ninja",
      "description": "MSVC debug build using Ninja generator",
      "configurePreset": "windows_debug_ninja"
    },
    {
      "name": "windows_release",
      "inherits": [
        "windows_base_msvc"
      ],
      "displayName": "MSVC Release",
      "description": "MSVC release build Visual Studio generator",
      "configurePreset": "windows_release",
      "nativeToolOptions": [
        "/p:UseMultiToolTask=true",
        "/p:EnforceProcessCountAcrossBuilds=true"
      ]
    },
    {
      "name": "macos_debug",
      "inherits": [
        "macos_base"
      ],
      "displayName": "MacOS Debug",
      "description": "MacOS debug build using Ninja generator",
      "configurePreset": "macos_debug"
    },
    {
      "name": "macos_release",
      "inherits": [
        "macos_base"
      ],
      "displayName": "MacOS Release",
      "description": "MacOS release build using Ninja generator",
      "configurePreset": "macos_release"
    },
    {
      "name": "linux_debug",
      "inherits": [
        "linux_base"
      ],
      "displayName": "Linux Debug",
      "description": "Linux debug build using Ninja generator",
      "configurePreset": "linux_debug"
    },
    {
      "name": "linux_release",
      "inherits": [
        "linux_base"
      ],
      "displayName": "Linux Release",
      "description": "Linux release build using Ninja generator",
      "configurePreset": "linux_release"
    }
  ],
  "testPresets": [
    {
      "name": "tests_base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "windows_base_msvc",
      "hidden": true,
      "inherits": [
        "tests_base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos_base",
      "hidden": true,
      "inherits": [
        "tests_base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux_base",
      "hidden": true,
      "inherits": [
        "tests_base"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows_default",
      "configurePreset": "windows_debug",
      "inherits": [
        "windows_base_msvc"
      ]
    },
    {
      "name": "macos_default",
      "configurePreset": "macos_debug",
      "inherits": [
        "macos_base"
      ]
    },
    {
      "name": "linux_default",
      "configurePreset": "linux_debug",
      "inherits": [
        "linux_base"
      ]
    }
  ]
}
